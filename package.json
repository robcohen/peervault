{
  "name": "peervault",
  "version": "0.2.60",
  "description": "P2P sync for Obsidian using Loro CRDT and Iroh transport",
  "type": "module",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "bun run esbuild.config.mjs",
    "dev": "bun run esbuild.config.mjs --watch",
    "check": "tsc --noEmit",
    "test": "bun test",
    "test:e2e": "bun run e2e/runner.ts",
    "test:e2e:scaled": "bun run e2e/scaled-runner.ts",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "package": "bun run build && cd dist && tar -czvf ../peervault-release.tar.gz main.js manifest.json styles.css peervault_iroh.js peervault_iroh_bg.wasm"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.0",
    "esbuild": "^0.27.2",
    "obsidian": "^1.11.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "loro-crdt": "^1.10.5",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  }
}
